{
  "audio": "pipewire",
  "bootloader": "systemd-bootctl",
  "custom-commands": [
    "cd /home/leung; git clone https://aur.archlinux.org/paru.git",
    "chown -R leung:leung /home/leung/paru"
  ],
  "!encryption-password": "<xxx>",
  "filesystem": "btrfs",
  "gfx_driver": "All open-source (default)",
  "harddrives": [
    "/dev/sdb",
    "/dev/sda"
  ],
  "hostname": "archlinux",
  "kernels": [
    "linux"
  ],
  "keyboard-language": "us",
  "mirror-region": {
    "custom": {
      "https://mirrors.tuna.tsinghua.edu.cn/archlinux/$repo/os/$arch": true,
      "https://mirrors.ustc.edu.cn/archlinux/$repo/os/$arch": true,
      "https://mirrors.aliyun.com/archlinux/$repo/os/$arch": true
    }
  },
  "nic": {
    "type": "nm"
  },
  "ntp": true,
  "packages": [
    "git",
    "wget",
    "curl",
    "neovim",
    "noto-fonts-cjk",
    "noto-fonts-extra",
    "noto-fonts-emoji",
    "wqy-microhei",
    "wqy-zenhei",
    "wqy-bitmapfont",
    "adobe-source-han-sans-cn-fonts",
    "adobe-source-han-serif-cn-fonts",
    "fcitx5-im",
    "fcitx5-rime",
    "fcitx5-table-extra",
    "fcitx5-chinese-addons",
    "firefox",
    "gnome-terminal",
    "htop",
    "rustup"
  ],
  "profile": "gnome",
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Asia/Shanghai"
}