{
  "dry_run": true,
  "audio": "pipewire",
  "bootloader": "systemd-bootctl",
  "custom-commands": [
    "cd /home/leung; git clone https://aur.archlinux.org/paru.git",
    "chown -R leung:leung /home/leung/paru"
  ],
  "!encryption-password": "<xxx>",
  "filesystem": "btrfs",
  "gfx_driver": "All open-source (default)",
  "harddrives": [
    "/dev/sdb",
    "/dev/sda"
  ],
  "hostname": "archlinux",
  "kernels": [
    "linux"
  ],
  "keyboard-language": "us",
  "mirror-region": {
    "custom": "https://mirrors.tuna.tsinghua.edu.cn/archlinux/$repo/os/$arch"
  },
  "nic": {
    "type": "systemd-networkd"
  },
  "ntp": true,
  "packages": [
    "git",
    "wget",
    "fish",
    "neovim"
  ],
  "profile": "sway",
  "sys-encoding": "utf-8",
  "sys-language": "en_US",
  "timezone": "Asia/Shanghai"
}